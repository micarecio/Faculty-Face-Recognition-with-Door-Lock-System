<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/text_action_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Professor,"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btn_break"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Take a Break"
        android:textSize="18sp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/text_action_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_end_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Class"
        android:textSize="18sp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/btn_break"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>